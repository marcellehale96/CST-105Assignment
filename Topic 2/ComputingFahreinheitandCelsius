package computingfahreinheitandcelcius;

import java.util.Scanner;

/**
 *
 * @author Marcelle Hale
 */
public class ComputingFahreinheitandCelsius {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        //Create a Scanner object
        Scanner input = new Scanner(System.in);
        
        //Prompt the user to input temperature in Fahrenheit
        System.out.print("Enter a Fahrenheit temperature : ");
        double fahrenheit = input.nextDouble();
        
        //Convert Fahrenheit to Celsius
        double celsius = (5.0 / 9) * (fahrenheit - 32);
        System.out.println(" Fahrenheit " + fahrenheit + "F" + " is " + 
                celsius + "C" + " in Celsius ");
        
        //Prompt the user to input temperature in Celsius
        System.out.print("Enter a Celsius temperature: ");
        double celsius2 = input.nextDouble();
        
        //Convert Celsius to Fahrenheit
        double fahrenheit2 = celsius2 * (9 / 5.0) + 32;
        System.out.println(" Celsius " + celsius2 + "C" + " is " +
                fahrenheit2 + "F" + " in Fahrenheit ");
        
        
        
    }
    
}
